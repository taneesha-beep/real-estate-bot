{
  "version": 2,
  "builds": [
    {
      "src": "realestate_bot/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "realestate_bot/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "realestate_bot/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "realestate_bot.settings",
    "PYTHONUNBUFFERED": "1"
  }
}